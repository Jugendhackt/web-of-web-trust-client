{
  "name": "Web of Web Trust",
  "description": "Build a trusty web!",
  "version": "0.0.1",
  "manifest_version": 2,
  "options_ui": {
    "page": "options/ui.html",
    "browser_style": true,
    "chrome_style": true
  },
  "permissions": [
    "storage",
    "tabs",
    "notifications",
    "https://vpapp.e1mo.de/*",
    "https://google.com/*",
    "https://*.google.com/*",
    "https://jsonplaceholder.typicode.com/*",
    "https://pad.medialepfade.net/*",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "content/main.js"
    ]
  },
  "icons": {
    "512": "media/icon-512.png"
  },
  "browser_action": {
    "default_icon": "media/icon-64.png",
    "default_title": "Web of Web Trust",
    "default_popup": "popup/main.html"
  }
}
